@model IEnumerable<AttendencePageModel>
@{
    Layout = null; // Assuming this is a standalone page, remove this if using a layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AT Engineers Attendance</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Custom styling for better aesthetics */
        body {
            background-color: #F0F8FF;
        }

        .attendance-table {
            border-radius: 8px;
            padding: 20px;
            background-color: #BFD7ED;
            width:130%;
            margin-left:-15%;
        }

        th, td {
            text-align: center;
            vertical-align: middle;
        }

        .show-file {
            cursor: pointer;
            color: #5D6D7E;
            text-decoration: underline;
        }

        .table-body{
            background-color:white;
        }
        .back{
            margin:10px 0 0 10px;
        }
    </style>
</head>
<body>
    <a href="@Url.Action("ATEngineersPage","Admin")" class="btn btn-primary mb-2 mr-2 back">Back</a>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                
                <div class="attendance-table p-4 shadow">
                    <h3 class="text-center text-uppercase mb-4" style="color: #0074b7;">Records</h3>
                    <div class="table-responsive " style="text-align:center">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <td>Id</td>
                                    <th>Name</th>
                                    <th>Section</th>
                                    <th>Department</th>
                                    <th>Location</th>
                                    <th>Village</th>
                                    <th>Mandal</th>
                                    <th>District</th>
                                    <th>Submit</th>
                                </tr>
                            </thead>
                            <tbody class="table-body">
                                <!-- Example Row (You can loop through your data here using Razor) -->
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var sec in Model)
                                    {
                                        if(sec.ImageColumn!=null)
                                        {
                                            <tr>
                                                <td>@sec.EngineerId</td>
                                                <td>@sec.Name</td>
                                                <td>@sec.Section</td>
                                                <td>@sec.Department</td>
                                                <td>@sec.Location</td>
                                                <td>@sec.Village</td>
                                                <td>@sec.Mandal</td>
                                                <td>@sec.District</td>
                                                <td><button class="btn btn-success">Submitted</button></td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>

        <!-- Bootstrap JS (Optional but needed if you want interactive elements like modals) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
