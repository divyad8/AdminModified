@{
    Layout = null; // Assuming this is a standalone page, remove this if using a layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AT Engineers Attendance</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Custom styling */
        body {
            background-color: #BFD7ED; /* Light blue background */
        }

        .attendance-table {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            border-radius: 8px;
            padding: 20px;
            background-color: #60A3D9; /* Mid-tone blue */
            color: #003B73; /* Darker blue for text */
        }

        th, td {
            text-align: center;
            vertical-align: middle;
            color: #003B73;
        }

        .table-body {
            background-color: white;
        }

        .table-responsive {
            width: 100%;
            border-radius: 10px;
        }

        .text-center {
            margin-top: 20px;
            margin-bottom: 0px;
        }

        .btn-custom {
            background-color: #0074B7; /* Darker blue for buttons */
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
        }

        .btn-custom:hover {
            background-color: #003B73; /* Darkest blue on hover */
        }

        input {
            outline: none;
            width: 100px;
            border-width: 0px;
            color: white;
            background-color: #0074B7;
            text-align: center;
        }

        input::placeholder {
            color: white;
        }

        @@media(max-width:500px) {
            .form-select {
                width: 90%;
            }
        }

        @@media(min-width:500px) {
            .table-responsive {
                width: 450px;
            }
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <a href="@Url.Action("AdminPage","Admin")" class="btn btn-primary mb-2 mr-2">Back</a>
                <div class="attendance-table p-4 shadow">
                    <h3 style="text-transform:capitalize;" class="text-center text-uppercase mb-4">Defining Page</h3>
                    <div class="table-responsive">
                        <table style="margin:0px;" class="table table-hover">
                            <tbody class="table-body">
                                <!-- Example Row (You can loop through your data here using Razor) -->
                                <tr>
                                    <td style="width:10px; text-align:start; padding-left:30px;"><label for="section" class="col-sm-4 col-form-label">Section</label></td>
                                    <td style="width:150px;" class="select-container">
                                        <a href="@Url.Action("Sections", "Section")" class="btn btn-custom">Manage</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:10px; text-align:start; padding-left:30px;"><label for="department" class="col-sm-4 col-form-label">Department</label></td>
                                    <td style="width:10px;" class="select-container">
                                        <a href="@Url.Action("Department", "Department")" class="btn btn-custom">Manage</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:10px; text-align:start; padding-left:30px;"><label for="district" class="col-sm-4 col-form-label">District</label></td>
                                    <td style="width:10px;" class="select-container">
                                        <a href="@Url.Action("District", "District")" class="btn btn-custom">Manage</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:10px; text-align:start; padding-left:30px;"><label for="mandal" class="col-sm-4 col-form-label">Mandal</label></td>
                                    <td style="width:10px;" class="select-container">
                                        <a href="@Url.Action("Mandal", "Mandal")" class="btn btn-custom">Manage</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:10px; text-align:start; padding-left:30px;"><label for="village" class="col-sm-4 col-form-label">Village</label></td>
                                    <td style="width:10px;" class="select-container">
                                        <a href="@Url.Action("Village", "Village")" class="btn btn-custom">Manage</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:10px; text-align:start; padding-left:30px;"><label for="atengineer" class="col-sm-4 col-form-label">ATEngineers</label></td>
                                    <td style="width:10px;" class="select-container">
                                        <a href="@Url.Action("ATEngineer", "ATEngineer")" class="btn btn-custom">Manage</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:10px; text-align:start; padding-left:30px;"><label for="location" class="col-sm-4 col-form-label">Locations</label></td>
                                    <td style="width:10px;" class="select-container">
                                        <a href="@Url.Action("Location", "Location")" class="btn btn-custom">Manage</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Optional but needed if you want interactive elements like modals) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
