@model IEnumerable<AttendencePageModel>
@{
    Layout = null; // Assuming this is a standalone page, remove this if using a layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AT Engineers Attendance</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
    /* Custom styling for better aesthetics */
    body {
    background-color: #EDE7F6;
    }

    .attendance-table {
    background-color: white;
    border-radius: 8px;
    padding: 20px;
    background-color: #e5d0ff;
    }

    th, td {
    text-align: center;
    vertical-align: middle;
    }

    .show-file {
    cursor: pointer;
    color: #5D6D7E;
    text-decoration: underline;
    }

    .table-body {
    background-color: white;
    }

    .modal-backdrop {
    background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 5px; /* Reduced padding */
    border: none; /* Removed border for cleaner look */
    }

    .image-preview {
    width: 100%;
    max-width: 600px;
    height: auto;
    }

    .close-btn {
    position: absolute;
    top: 5px; /* Adjusted position */
    right: 10px;
    font-size: 24px;
    color: #ffffff;
    cursor: pointer;
    }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <a href="@Url.Action("AdminPage","Admin")" class="btn btn-primary mb-2 mr-2">Back</a>

                <div class="attendance-table p-4 shadow">
                    <h3 class="text-center text-uppercase mb-4" style="color: #6C3483;">AT Engineers Attendance</h3>
                    <div class="table-responsive" style="text-align:center">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Id</th>
                                    <th>EngineerId</th>
                                    <th>AT Engineer Name</th>
                                    <th>Section</th>
                                    <th>Location</th>
                                    <th>Village</th>
                                    <th>Mandal</th>
                                    <th>District</th>
                                    <th>Uploaded AT Report</th>
                                    <th>Uploaded Selfie</th>
                                </tr>
                            </thead>
                            <tbody class="table-body">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var sec in Model)
                                    {
                                            <tr>
                                                <td>@sec.Id</td>
                                                <td>@sec.EngineerId</td>
                                                <td>@sec.Name</td>
                                                <td>@sec.Section</td>
                                                <td>@sec.Longitude, @sec.Latitude</td>
                                                <td>@sec.Village</td>
                                                <td>@sec.Mandal</td>
                                                <td>@sec.District</td>
                                                <td>
                                                    <!-- Add a link to view or download the report file -->
                                                    <a href="@Url.Action("GetReportFile", "ATEngineersAttendencePage", new { id = sec.Id })" target="_blank" class="btn btn-link">Show file</a>
                                                </td>

                                                <td>
                                                    <!-- Show image for Selfie -->
                                                    <span class="show-file" onclick="showImage('selfie', @sec.Id)">Show file</span>
                                                </td>
                                            </tr>
                                    }
                                }
                            </tbody>
                        </table>

                        <a style="background-color:#793ccf; color:white" href="@Url.Action("AttendencePage", "AttendencePage")" class="btn btn-custom">Show Alloted Work</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal for Image Preview -->
        <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <span class="close-btn" data-bs-dismiss="modal">&times;</span>
                    <img id="image-preview" class="image-preview" src="" alt="Image Preview" />
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (Optional but needed if you want interactive elements like modals) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Function to display the image in the modal
        function showImage(type, Id) {
            var imageUrl = '@Url.Action("GetImage", "ATEngineersAttendencePage")?id=' + Id;
            document.getElementById('image-preview').src = imageUrl;
            var modal = new bootstrap.Modal(document.getElementById('imageModal'));
            modal.show();
        }
    </script>
</body>
</html>
