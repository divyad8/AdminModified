@{
    ViewData["Title"] = "ATEngineer Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Add Bootstrap for styling and Font Awesome for icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        /* Background color */
        body {
            background-color: #BFD7ED;
            font-family: Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        /* Centered container */
        .main-container {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            max-width: 500px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            text-align: center;
            margin: auto;
        }

        /* Header */
        h1 {
            color: #003B73;
            font-size: 26px;
            margin-bottom: 30px;
        }

        /* Button styling */
        .btn-custom {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #60A3D9;
            color: #ffffff;
            border: none;
            padding: 12px 20px;
            font-size: 18px;
            margin: 15px 0;
            border-radius: 8px;
            transition: all 0.3s ease;
            width: 100%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-decoration: none;
        }

            .btn-custom:hover {
                background-color: #0074B7;
                color: #ffffff;
                transform: translateY(-3px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

            /* Icon styling with spacing */
            .btn-custom i {
                margin-right: 10px;
                font-size: 20px;
            }



        /* Responsive adjustments */
        @@media (max-width: 500px) {
            .main-container {
                padding: 30px 20px;
            }

            h1 {
                font-size: 22px;
            }
        }
    </style>

</head>
<body>

    <div class="main-container">
       

        <!-- Heading -->
        <h1>ATEngineer Page</h1>

        <!-- Buttons as navigation options -->
        <a href="@Url.Action("ShowWork", "Admin")" class="btn btn-custom">
            <i class="fas fa-clipboard-list"></i> Show Work
        </a>
        <a href="@Url.Action("Records", "Admin")" class="btn btn-custom">
            <i class="fas fa-file-alt"></i> Records
        </a>
    </div>

    <!-- Bootstrap and Font Awesome JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
