@{
    ViewData["Title"] = "Admin Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap and Font Awesome for layout and icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        /* Background color */
        body {
            background-color: #BFD7ED;
            font-family: Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        /* Centered, card-style container */
        .admin-container {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            max-width: 500px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            text-align: center;
            margin: auto; /* Ensures center alignment */
        }

        /* Header */
        h1 {
            color: #003B73; /* Dark blue */
            font-size: 26px;
            margin-bottom: 30px;
        }

        /* Button styling */
        .btn-custom {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #60A3D9; /* Medium blue */
            color: #ffffff;
            border: none;
            padding: 12px 20px;
            font-size: 18px;
            margin: 25px 0; /* Add spacing above and below each button */
            border-radius: 8px;
            transition: all 0.3s ease;
            width: 100%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-decoration: none;
        }

            .btn-custom:hover {
                background-color: #0074B7; /* Dark blue hover */
                color: #ffffff; /* Keep text color white */
                transform: translateY(-3px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

            /* Icon styling with spacing */
            .btn-custom i {
                margin-right: 10px; /* Adjusts space between icon and text */
                font-size: 20px;
            }

    

        /* Responsive adjustments */
        @@media (max-width: 500px) {
            .admin-container {
                padding: 30px 20px;
            }

            h1 {
                font-size: 22px;
            }
        }
        .icons{
            padding-right:10px;
        }
    </style>
</head>
<body>



    <!-- Main container for Admin page -->
    <div class="admin-container">
        <h1>Admin Dashboard</h1>

        <!-- Admin navigation buttons with icons and spacing -->
        <a href="@Url.Action("AllotWork", "Allotwork")" class="btn btn-custom">
            <i class="fas fa-tasks icons"></i> Allot Work
        </a>
        <a href="@Url.Action("AttendencePage", "AttendencePage")" class="btn btn-custom">
            <i class="fas icons fa-calendar-check mr-2"></i> Attendance
        </a>
        <a href="@Url.Action("DefiningPage", "Admin")" class="btn btn-custom">
            <i class="fas icons fa-cog mr-2"></i> Defining Data
        </a>
    </div>

    <!-- Bootstrap and Font Awesome JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>
